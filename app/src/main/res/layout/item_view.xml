<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_type"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="12dp"

        android:text="Type"
        android:textSize="22sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tv_defination"
        app:layout_constraintEnd_toEndOf="@+id/tv_defination"
        app:layout_constraintStart_toStartOf="@+id/tv_defination"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_defination"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="Defination"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/img_def"
        app:layout_constraintTop_toBottomOf="@+id/tv_type" />

    <ImageView
        android:id="@+id/img_def"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_defination"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_type"
        tools:srcCompat="@tools:sample/avatars" />


</androidx.constraintlayout.widget.ConstraintLayout>